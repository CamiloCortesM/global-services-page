---
import Layout from '@/layouts/PageLayout.astro';
import Features from '@/components/widgets/Features.astro';
import Description from '@/components/widgets/Description.astro';
import Benefit from '@/components/widgets/Benefit.astro';
import Services from '@/components/widgets/Services.astro';
import Stats from '@/components/widgets/Stats.astro';
import Steps from '@/components/widgets/Steps.astro';
import Brands from '@/components/widgets/Brands.astro';
import FAQs from '@/components/widgets/FAQs.astro';

import { getPermalink } from '@/utils/permalinks';

//metadata
const metadata = {
  title: "Accueil",
};
---

<Layout metadata={metadata}>
  <Description
    id="description"
    title="LA MEILLEURE ENTREPRISE DE NETTOYAGE À LONDRES"
    subtitle="Chez Global Services and Maintenance, nous sommes spécialisés dans la prestation de services professionnels de nettoyage et d'entretien pour les maisons et les bureaux à Londres. Forts de plusieurs années d'expérience, nous garantissons des résultats exceptionnels pour chaque tâche, du nettoyage général au lavage de tapis et à l'entretien des jardins. Notre équipe hautement qualifiée s'engage à offrir l'excellence dans chaque détail, avec efficacité, professionnalisme et des prix compétitifs. Faites-nous confiance pour maintenir votre espace immaculé et en parfait état."
    classes={{
      headline: {
        title: 'text-2xl md:text-3xl',
        subtitle: 'text-left text-lg',
      },
    }}
    image={{
      src: 'https://img.freepik.com/foto-gratis/persona-servicio-limpieza-profesional-que-usa-aspiradora-oficina_23-2150520631.jpg?t=st=1709169976~exp=1709173576~hmac=ae60dfdcc11a6d6425872deb5eae7ac68cc8513e77816452d65a3be32cbf5ff8&w=996',
      alt: 'Todo:change',
    }}
  />

  <Features
    id="features"
    tagline="Notre excellence"
    title="Découvrez l'excellence avec Global Services and Maintenance"
    subtitle="Explorez les niveaux exceptionnels des services professionnels de nettoyage et d'entretien que nous proposons à Londres."
    items={[
      {
        title: "Formules spécialisées",
        description:
          "Des détergents puissants mais doux qui garantissent un nettoyage en profondeur sans endommager les surfaces.",
        icon: 'tabler:flask',
      },
      {
        title: "Fiabilité",
        description:
          "Faites-nous confiance pour redonner à votre maison son meilleur aspect, votre sanctuaire de propreté.",
        icon: 'tabler:shield-check',
      },
      {
        title: "Qualité certifiée",
        description:
          "Nous garantissons un niveau de propreté impeccable pour votre maison ou votre bureau.",
        icon: 'tabler:certificate',
      },
      {
        title: "Des décennies d'expérience",
        description:
          "Avec des années d'expérience dans le secteur, nous offrons une qualité de nettoyage qui change la vie.",
        icon: 'tabler:star',
      },
      {
        title: "Une équipe qualifiée",
        description:
          "Nos professionnels travaillent avec respect pour votre maison, garantissant un travail bien fait.",
        icon: 'tabler:users',
      },
      {
        title: "Efficacité dans le travail",
        description:
          "Des services rapides et efficaces adaptés à votre emploi du temps.",
        icon: 'tabler:bulb',
      },
    ]}
  />

  <Benefit
    isReversed
    tagline="Avantages"
    title="Pourquoi sommes-nous différents ?"
    items={[
      {
        title: "Satisfaction garantie",
        description:
          "Nous nous engageons à garantir votre satisfaction à chaque service, en travaillant sans relâche pour dépasser vos attentes et vous offrir une expérience de nettoyage exceptionnelle.",
      },
      {
        title: "Professionnels licenciés et assurés",
        description:
          "Notre équipe de professionnels est entièrement autorisée et assurée, vous offrant ainsi la tranquillité d'esprit de savoir que votre propriété est entre de bonnes mains.",
      },
      {
        title: "Construire des relations durables",
        description:
          "Nous nous engageons activement auprès de la communauté, établissant des relations à long terme avec nos clients et recherchant constamment de nouvelles opportunités de croissance et d'expansion pour notre entreprise.",
      },
    ]}
    image={{
      src: 'https://img.freepik.com/foto-gratis/persona-servicio-limpieza-profesional-que-usa-aspiradora-oficina_23-2150520631.jpg?t=st=1709050517~exp=1709054117~hmac=40deee42843737865431b89c549be019954c535b19225b647749e06087f8bd79&w=996',
      alt: 'Colorful Image',
    }}
  >
  
  
  <Fragment slot="content">
    <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">
      Ready for Impeccable Cleaning
    </h3>
    Get prepared for a thorough cleaning of your home, office, residence, or warehouse
    with astonishing precision. We'll ensure your space shines brilliantly and
    exudes a fresh, inviting scent.
  </Fragment>

  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50"></div>
  </Fragment>
</Benefit>

<Benefit
  isAfterContent
  items={[
    {
      title: 'Tailored Cleaning Solutions',
      description: `We design personalised cleaning programmes tailored to your specific needs, ensuring exceptional results with every service.`,
    },
    {
      title: 'Commitment to Environmental Responsibility',
      description:
        'We are committed to using natural, environmentally-friendly cleaning products, guaranteeing effective cleaning without compromising the health of your home or the planet.',
    },
    {
      title: 'Continuous Improvement and Innovation',
      description:
        'We strive to stay at the forefront of the industry through ongoing training of our staff and the adoption of new technologies and innovative practices to deliver the highest quality service.',
    },
  ]}
  image={{
    src: 'https://img.freepik.com/foto-gratis/hombres-tiro-completo-chocan-cinco-oficina_23-2149345549.jpg?t=st=1709050551~exp=1709054151~hmac=03a3cd0f5efe0c5d0003422e676811159838f65fced42b34e85351a88d39527b&w=996',
    alt: 'Blueprint Image',
  }}
>
  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50"></div>
  </Fragment>
</Benefit>

