---
export const prerender = false;
import ContactUs from '@/components/widgets/ContactUs.astro';
import Layout from '@/layouts/ServiceLayout.astro';
import { servicesForms } from '@/utils/service-forms';

const servicesLinks = Object.keys(servicesForms);

//metadata
const metadata = {
  title: 'Obtenha uma Cotação',
};
---

<Layout
  metadata={metadata}
  image="/images/mano-sosteniendo-moneda-mexicana.webp"
  title="Obtenha uma cotação"
  content = 'Limpeza Impecável ao Seu Alcance'
>
  <ContactUs
    title="Obtenha uma Cotação Gratuita dos Nossos Serviços de Limpeza"
    classes={{ container: 'md:py-4 lg:py-8' }}
    subtitle="Está à procura de serviços de limpeza de qualidade? Obtenha uma cotação gratuita hoje mesmo. Os nossos profissionais estão prontos para cuidar das suas necessidades de limpeza, seja para casas, escritórios ou espaços comerciais. Contacte-nos agora e descubra como podemos ajudá-lo a manter o seu espaço impecável!"
    description="A nossa equipa de suporte normalmente responde dentro de 48 horas úteis."
    subject="Cotação"
    button="Obter Cotação"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nome',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Número',
        pattern: '[0-9]+',
        title:'Por favor, insira um número de telefone válido do Reino Unido.',
      },
    ]}
    serviceOption={{ servicesLinks, label: 'Opções de Serviço' }}
    columnsForm={false}
    disclaimer={{
      label:
        'Ao enviar este formulário de contacto, reconhece e concorda com a recolha das suas informações pessoais.',
    }}
  />
</Layout>
