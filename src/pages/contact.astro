---
export const prerender = false;
import Layout from '@/layouts/PageLayout.astro';
import ContactUs from '@/components/widgets/ContactUs.astro';
import Ubication from '@/components/widgets/Ubication.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout
  metadata={metadata}
  title="Contact Us"
  content="Reach out for sparkling clean solutions."
  image="/images/oficina-limpieza-hombres-tiro-completo.webp"
>
  <ContactUs
    title="Drop us a message today!"
    classes={{ container: 'md:py-4 lg:py-8' }}
    subtitle="For quicker answers, explore our FAQs section. You may find the solution you're looking  for right there! If not, our support team is delighted to help you."
    description="Our support team typically responds within 48 business hours."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    subject="Contact"
    items={[
      {
        title: 'General support',
        description: `Chat with us and ask questions about our services or any other doubts you may have about us or our services.`,
      },
      {
        title: 'Contact sales',
        description:
          'Ask about our availability of timetables, payment methods or any other questions you may have about our company and what we offer.',
      },
      {
        title: 'Phone',
        description: `07599 065018 - 07455 503978
                      landline: 020 3319 0192`,
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: `director@gsmlimited.co.uk
                      gsmlimitedinfo@gmail.com`,
        icon: 'tabler:mail',
      },
    ]}
  />

  <Ubication
    title="Ubication"
    subtitle="Located in the heart of London, our company provides top-quality cleaning services to meet all your home and office maintenance needs."
    map="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2485.3675249828293!2d-0.11413562370026689!3d51.46976787180479!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487604617d025ebb%3A0x2d12eaf07ee8c87!2sHolles%20House%2C%20Overton%20Rd%2C%20London%20SW9%207AP%2C%20Reino%20Unido!5e0!3m2!1ses!2sco!4v1721166598283!5m2!1ses!2sco"
  />
</Layout>
