---
import Wave from '@/components/ui/Wave.astro';

export interface Props {
  id?: string;
  title?: string;
  content?: string;
  image?: string | any;
  position?: string;
}

const {
  id,
  title = await Astro.slots.render('title'),
  content = await Astro.slots.render('content'),
  image = await Astro.slots.render('image'),
  position = await Astro.slots.render('position'),
} = Astro.props;
---

<section
  class="relative h-52 md:h-[80vh] overflow-hidden white-text-selection"
  {...id ? { id } : {}}
>
  <div
    class="absolute z-10 inset-0 bg-gradient-to-r from-red-500 to-blue-800 opacity-55"
  >
  </div>
  <div
    class=`absolute inset-0 bg-cover ${position} bg-no-repeat`
    style=`background-image: url('${image}');`
  >
  </div>
  <div
    class="relative z-20 w-full md:w-9/12 mx-auto h-full px-4 sm:px-6 flex items-center justify-center"
  >
    <div class="text-center text-white m-0 md:-mt-7">
      {
        title && (
          <h1
            class="text-3xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading"
            set:html={title}
          />
        )
      }
      {
        content && (
          <p class="text-xl mb-6 font-semibold opacity-80" set:html={content} />
        )
      }
    </div>
  </div>
  <Wave />
</section>
