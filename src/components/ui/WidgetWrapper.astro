---
import { twMerge } from 'tailwind-merge';
const {
  id,
  containerClass = '',
  bg,
  as = 'section',
} = Astro.props;

const WrapperTag = as;
---

<WrapperTag class="relative not-prose scroll-mt-[72px]" {...id ? { id } : {}}>
   <div
    class:list={[
      twMerge(
        'relative mx-auto max-w-7xl px-4 md:px-6 py-12 md:py-16 lg:py-12 text-default',
        containerClass
      ),
    ]}
  >
    <slot />
  </div>
</WrapperTag>
