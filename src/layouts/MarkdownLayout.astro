---
import Layout from '@/layouts/Layout.astro';

export interface Props {
  frontmatter: {
    title?: string;
  };
}

const { frontmatter } = Astro.props;

const metadata = {
  title: frontmatter.title,
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:px-6 lg:px-8 lg:py-20 mx-auto max-w-4xl">
    <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter">
      {frontmatter.title}
    </h1>
    <div class="prose prose-lg max-w-4xl mt-8 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 prose-img:rounded-md prose-img:shadow-lg mx-auto">
      <slot />
    </div>
  </section>
</Layout>
