---
import Hero from '../components/widgets/Hero.astro';
import Layout from './Layout.astro';

interface Props {
  title?: string;
  content?: string;
  image?: string;
  position?: string;
}

const {
  title = 'Premium Cleaning Services: Global Services and Maintenance',
  content = 'Elevating environments through expert cleaning solutions',
  image = 'images/servicio-limpieza-profesional-personas-trabajando-juntas-oficina.jpg',
  position = 'center',
} = Astro.props;
---

<Layout>
  <slot name="Hero">
    <Hero>
      <Fragment slot="title">
        {title}
      </Fragment>
      <Fragment slot="content">{content}</Fragment>
      <Fragment slot="image">{image}</Fragment>
      <Fragment slot="position">{position}</Fragment>
    </Hero>
  </slot>
  <slot />
</Layout>
