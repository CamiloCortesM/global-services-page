---
import Hero from '@/components/widgets/Hero.astro';
import Layout from './Layout.astro';
import type { MetaData } from '@/types';
import { getLangFromUrl, useTranslations } from '@/utils/i18n/utils';

interface Props {
  title?: string;
  content?: string;
  image?: string;
  position?: string;
  metadata?: MetaData;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const {
  title = 'Global Services and Maintenance',
  content = t('index.description'),
  image = '/images/servicio-limpieza-profesional-personas-trabajando-juntas-oficina.webp',
  position = 'bg-center',
  metadata,
} = Astro.props;
---

<Layout metadata={metadata}>
  <slot name="Hero">
    <Hero>
      <Fragment slot="title">
        {title}
      </Fragment>
      <Fragment slot="content">{content}</Fragment>
      <Fragment slot="image">{image}</Fragment>
      <Fragment slot="position">{position}</Fragment>
    </Hero>
  </slot>
  <slot />
</Layout>
