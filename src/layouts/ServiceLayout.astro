---
import { HeroService } from '@/components/widgets';
import Layout from './Layout.astro';

interface Props {
  title?: string;
  content?: string;
  image?: string;
  position?: string;
}

const {
  title = 'Residential Cleaning',
  content = 'lorem Ex in non eiusmod culpa elit anim proident.',
  image = '/images/vista-lateral-mesa-limpieza-barista-femenina-guantes-latex.webp',
  position = 'bg-center',
} = Astro.props;
---

<Layout>
  <slot name="Hero">
    <HeroService>
      <Fragment slot="title">{title}</Fragment>
      <Fragment slot="content">
        {content}
      </Fragment>
      <Fragment slot="image">
        {image}
      </Fragment>
      <Fragment slot="position">{position}</Fragment>
    </HeroService>
  </slot>
  <slot />
</Layout>
