---
import HeroService from '@/components/widgets/HeroService.astro';
import Layout from './Layout.astro';
import type { MetaData } from '@/types';

interface Props {
  title?: string;
  content?: string;
  image?: string;
  position?: string;
  metadata?: MetaData;
}

const {
  title = 'Residential Cleaning',
  content = '',
  image = '/images/vista-lateral-mesa-limpieza-barista-femenina-guantes-latex.webp',
  position = 'bg-center',
  metadata,
} = Astro.props;
---

<Layout metadata={metadata}>
  <slot name="Hero">
    <HeroService>
      <Fragment slot="title">{title}</Fragment>
      <Fragment slot="content">
        {content}
      </Fragment>
      <Fragment slot="image">
        {image}
      </Fragment>
      <Fragment slot="position">{position}</Fragment>
    </HeroService>
  </slot>
  <slot />
</Layout>
