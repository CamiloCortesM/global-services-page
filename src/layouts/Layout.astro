---
import { ViewTransitions } from 'astro:transitions';
import '@/assets/styles/talwind.css';

import CustomStyles from '@/components/CustomStyles.astro';
import BasicScripts from '@/components/common/BasicScripts.astro';
import Contact from '@/components/widgets/Contact.astro';
import Footer from '@/components/widgets/Footer.astro';
import Header from '@/components/widgets/Header.astro';

import { footerData, headerData } from '@/navigation';

import type { MetaData as MetaDataType } from '@/types';
import { I18N } from '../utils/config';
import Metadata from '@/components/common/Metadata.astro';
import CommonMeta from '@/components/common/CommonMeta.astro';
import Favicons from '@/components/Favicons.astro';
import Analitys from '@/components/common/Analitys.astro';
import SiteVerification from '@/components/common/SiteVerification.astro';

export interface Props {
  metadata?: MetaDataType;
}

const { metadata = {} } = Astro.props;

const { language, textDirection } = I18N;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <CommonMeta />
    <CustomStyles />
    <Metadata {...metadata} />
    <ViewTransitions />
    <Favicons />
    <Analitys />
    <SiteVerification />

    <!-- Swiper Styles and Scripts -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"
    />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"
      defer></script>

    <!-- TODO: Add more metadata if needed -->
  </head>

  <body class="antialiased text-default tracking-tight">
    <!-- Contact Section -->
    <slot name="contact">
      <Contact />
    </slot>

    <!-- Header Section -->
    <slot name="header">
      <Header {...headerData} />
    </slot>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer Section -->
    <slot name="footer">
      <Footer {...footerData} />
    </slot>

    <!-- Basic Scripts -->
    <BasicScripts />
  </body>
</html>
